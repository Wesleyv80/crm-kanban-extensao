{
  "manifest_version": 3,
  "name": "CRM Kanban WhatsApp",
  "version": "1.0",
  "description": "Extens√£o para transformar o WhatsApp Web em um CRM com visual estilo Kanban.",
  "icons": {
    "16": "panel_icon.svg",
    "48": "panel_icon.svg",
    "128": "panel_icon.svg"
  },
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel_icon.svg",
        "placeholder.png",
        "crm.png",
        "cadastro.png"
      ],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],
  "action": {
    "default_icon": "panel_icon.svg"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
